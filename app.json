{
  "expo": {
    "name": "VYXO",
    "slug": "VYXO",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/app-icon-hnr.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/app-icon-hnr.png",
      "resizeMode": "contain",
      "backgroundColor": "#0F0F0F"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.vyxo.app",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSCameraUsageDescription": "VYXO needs access to your camera to record videos",
        "NSMicrophoneUsageDescription": "VYXO needs access to your microphone to record audio with videos",
        "NSPhotoLibraryUsageDescription": "VYXO needs access to your photo library to upload videos",
        "NSPhotoLibraryAddUsageDescription": "VYXO needs permission to save videos to your photo library"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/app-icon-hnr.png",
        "backgroundColor": "#0F0F0F"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.vyxo.app",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_MEDIA_VIDEO",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_VISUAL_USER_SELECTED",
        "android.permission.ACCESS_MEDIA_LOCATION",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_MEDIA_VIDEO",
        "android.permission.READ_MEDIA_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/images/final_quest_240x240.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-font",
      "expo-router",
      "expo-web-browser",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow VYXO to access your camera to record videos",
          "microphonePermission": "Allow VYXO to access your microphone to record audio",
          "recordAudioAndroid": true
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Allow VYXO to access your photos to upload videos",
          "savePhotosPermission": "Allow VYXO to save videos to your photo library",
          "isAccessMediaLocationEnabled": true
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow VYXO to access your photos to upload videos"
        }
      ]
    ],
    "scheme": "VYXO",
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "backendUrl": "https://2zrr473wqw4kppdhxncb65tkzxvzqnk3.app.specular.dev",
      "eas": {
        "projectId": "4b8ae3db-bca6-4d0d-9a23-11b3ad134d46"
      }
    }
  }
}
